<div class="container">
<h2 class="form-signin-heading">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, nil, :class => "sr-only" %>
    <%= f.email_field :email, autofocus: true, :id => "inputEmail", :class => "form-control", :placeholder => "Почта" %>
  

    <%= f.label :password, nil, :class => "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", :id => "inputPassword", :class => "form-control", :placeholder => "Пароль" %>
  

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
